<%- include('../partials/header.ejs')%>
<div class = "flexcolumn neweventwrapper">
    <form method = "POST" action = "/events/<%= event.id%>?_method=PUT" class="new-form" enctype="multipart/form-data">
        <div class="flex">
            <label for="category">Category</label>
            <select name="category" id="category" required>
                <option value="<%= event.category%>" selected hidden><%= event.category%></option>
                <option value="connecting">Connecting</option>
                <option value="sports">Moon Sports</option>
                <option value="cuisine">Moon Cuisine</option>
                <option value="astronomy">Astronomy</option>
                <option value="other">Other</option>
            </select>
        </div>
        <div class="flex">
            <label for="title">Title</label>
            <input type="text" id="title" name="title" value = "<%= event.title%>" required>
        </div>
        <div class="flex">
            <label for="details">Details</label>
            <textarea id="details" cols="20" rows="2" placeholder="description" name="content" required minlength="10"><%= event.content%></textarea>
        </div>
        <div class="flex">
            <label for="where">Where</label>
            <input type="text" id="where" placeholder="Location" value="<%= event.location%>" name="location" required>
        </div>
        <div class="flex">
            <label for="start">Start</label>
            <input type="datetime-local" id="start" name="start" value="<%= start%>" required>
        </div>
        <div class="flex">
            <label for="end">End</label>
            <input type="datetime-local" id="end" name="end" value="<%= end %>" required>
        </div>
        <div class="flex">
            <label for="image">Image</label>
            <input type="file" id="image" name="image">
        </div>
        <div class="flex"><label></label><input type="submit" value="Submit"></div>
  </form>
    </div>
    <%- include('../partials/footer.ejs')%>
