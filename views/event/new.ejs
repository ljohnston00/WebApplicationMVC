<%- include('../partials/header.ejs')%>
<main class="flexcolumn neweventwrapper">
    <form method = "POST" action="/events" enctype="multipart/form-data">
          <div class="flex">
              <label for="category">Category</label>
              <select name="category" id="category" required>
                  <option value="" disabled selected hidden>--Select a Category--</option>
                  <option value="connecting">Connecting</option>
                  <option value="sports">Moon Sports</option>
                  <option value="cuisine">Moon Cuisine</option>
                  <option value="astronomy">Astronomy</option>
                  <option value="other">Other</option>
              </select>
          </div>
          <div class="flex">
              <label for="title">Title</label>
              <input type="text" id="title" placeholder="title" name="title" required>
          </div>
          <div class="flex">
              <label for="details">Details</label>
              <textarea id="details" cols="20" rows="2" placeholder="description" name="content" required minlength="10"></textarea>
          </div>
          <div class="flex">
              <label for="where">Where</label>
              <input type="text" id="where" placeholder="location" name="location" required>
          </div>
          <div class="flex">
              <label for="start">Start</label>
              <input type="datetime-local" id="start" name="start" required>
          </div>
          <div class="flex">
              <label for="end">End</label>
              <input type="datetime-local" id="end" name="end" required>
          </div>
          <div class="flex">
              <label for="image">Image</label>
              <input type="file" id="image" name="image" required>
          </div>
          <div class="flex"><label></label><input type="submit" value="Submit"></div>
    </form>
  </main>
    <%- include('../partials/footer.ejs')%>